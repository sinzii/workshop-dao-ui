{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "composite": true,
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "target",
    "./*/target"
  ],
  "include": [
    "./artifacts/**/*.json"
  ]
}
